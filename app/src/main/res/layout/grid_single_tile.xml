<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/tileLayout">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:id="@+id/tileLayoutFront"
        android:clickable="true"
        android:onClick="onClickTile"
        android:background="@drawable/menu_button_style">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tileSettings"
            android:src="@drawable/ic_settings_black_48dp"
            android:background="@drawable/ic_settings_black_48dp"
            android:clickable="true"
            android:onClick="onClickTileSettings"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:id="@+id/tileLayoutBack"
    android:background="@drawable/menu_button_style"
    android:visibility="gone" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tileSettingsBack"
            android:src="@drawable/ic_settings_black_48dp"
            android:background="@drawable/ic_settings_black_48dp"
            android:clickable="true"
            android:onClick="onClickTileSettings"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="40dp"
            android:id="@+id/textViewBack"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>